<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="MappingRecipes" namespace="MappingRecipes.CalculatedProperties">
  <class name="Invoice">
    <id name="Id">
      <generator class="guid.comb"/>
    </id>
    <property name="Amount"/>
    <property name="Customer"/>
    <property name="InvoicesOnCustomer" formula="(SELECT COUNT(*) FROM Invoice i WHERE i.Customer=Customer)"/>
  </class>
</hibernate-mapping>